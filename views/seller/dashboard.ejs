<!DOCTYPE html>
<html>
<head>
    <title>Kênh người bán</title>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <h1>Quản lý sản phẩm</h1>
    <a href="/seller/add" class="btn btn-success mb-3">+ Thêm sản phẩm mới</a>
    <a href="/" class="btn btn-secondary mb-3">Về trang chủ</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Kho</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(p => { %>
            <tr>
                <td><img src="<%= p.image_url %>" width="50"></td>
                <td><%= p.name %></td>
                <td><%= Number(p.price).toLocaleString('vi-VN') %> đ</td>
                <td><%= p.stock_qty %></td>
                <td>
                    <a href="/seller/edit/<%= p.product_id %>" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="/seller/delete/<%= p.product_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Bạn chắc chắn muốn xóa?')">Xóa</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>